@page "{id:int}"
@model PhotoGallery.Web.Areas.Identity.Pages.Account.Manage.EditGalleryModel
@using PhotoGallery.Web.Areas.Identity.Pages.Account.Manage
@{
    Layout = "/Areas/Identity/Pages/Account/Manage/_Layout.cshtml";
    ViewData["Title"] = "Edit gallery";
    ViewData["ActivePage"] = ManageNavPages.Galleries;
}

<h3 class="mb-3">@ViewData["Title"]</h3>

<form method="post">
    <div class="mb-3">
        <label asp-for="Input.Title" class="form-label"></label>
        <input asp-for="Input.Title" class="form-control" />
        <span asp-validation-for="Input.Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Description" class="form-label"></label>
        <textarea asp-for="Input.Description" rows="3" class="form-control"></textarea>
        <span asp-validation-for="Input.Description" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Save changes</button>
        <a class="btn btn-outline-secondary" asp-page="./Gallery" asp-route-id="@Model.GalleryId">Cancel</a>
    </div>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
